# Following https://wiki.archlinux.org/title/Arch_package_guidelines
#
# Maintainer: Your Name <HiranChaudhuri@github.com>
pkgname="@PACKAGE_NAME_NORMAL@"
pkgver="@APPLICATION_VERSION@"
pkgrel=1
pkgdesc=""
arch=()
url=""
license=('')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=($pkgname-$pkgver.tar.gz)
noextract=()
md5sums=() #autofill using updpkgsums

build() {
  cd "$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
