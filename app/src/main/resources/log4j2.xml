<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="File" 
                     bufferedIO="true" immediateFlush="true" append="true"
                     filePattern="${sys:user.home}/.jsettlers/settlers-installer-%d{yyyy-MM-dd-HH-mm-ss}.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <OnStartupTriggeringPolicy minSize="0"/>
            </Policies>
            <!--
                     fileName="${sys:user.home}/.jsettlers/settlers-installer.log" 
            <DefaultRolloverStrategy/>-->
        </RollingFile>
    </Appenders>
    <Loggers>
        <!-- error, warn, info, debug, trace -->
    <Logger level="info" name="org.oolite.hiran.nexus.ChatPanel"/>
    <Logger level="info" name="org.oolite.hiran.nexus.Configuration"/>
    <Logger level="info" name="org.oolite.hiran.nexus.Main"/>
    <Logger level="info" name="org.oolite.hiran.nexus.MainFrame2"/>
    <Logger level="info" name="org.oolite.hiran.nexus.oolite.DebugConsoleHandler"/>
    <Logger level="info" name="org.oolite.hiran.nexus.oolite.OoliteCommand"/>
    <Logger level="info" name="org.oolite.hiran.nexus.oolite.OoliteConnector"/>
    <Logger level="info" name="org.oolite.hiran.nexus.oolite.PlistProtocolEncoder"/>
    <Logger level="info" name="org.oolite.hiran.nexus.oolite.PlistProtocolDecoder"/>
    <Logger level="info" name="org.oolite.hiran.nexus.oolite.TCPServer"/>
    <Logger level="warn" name="org.oolite.hiran.nexus.oolite.TCPServer-filter"/>
    <Logger level="info" name="org.oolite.hiran.nexus.oolite.Util"/>
    <Logger level="info" name="org.oolite.hiran.nexus.StatusPanel"/>
    <Logger level="info" name="org.oolite.hiran.nexus.ui.Balloon"/>
    <Logger level="info" name="org.oolite.hiran.nexus.ui.ManifestTableModel"/>
    <Logger level="info" name="org.oolite.hiran.nexus.ui.OoliteConfigurationPanel"/>
    <Logger level="info" name="org.oolite.hiran.nexus.ui.StashDialog"/>
    <Logger level="info" name="org.oolite.hiran.nexus.ui.StockEntryTableModel"/>
    <Logger level="info" name="org.oolite.hiran.nexus.ui.StockEntryRenderer"/>
    <Logger level="info" name="org.oolite.hiran.nexus.xmpp.OoliteWarehouseResponseProvider"/>
    <Logger level="info" name="org.oolite.hiran.nexus.xmpp.XmppConnector2"/>
    <Logger level="info" name="org.apache.mina.filter.codec.ProtocolCodecFilter"/>
    <Root level="TRACE">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>